#!/usr/bin/env node
// backend/bin/www/
console.log("ğŸ”¥ BIN/WWW LOADED - SOCKET SERVER SHOULD BE ACTIVE");

require('dotenv').config();

const http = require("http");
const { Server } = require("socket.io");

const { port, environment } = require("../config");
const isProduction = environment === "production";

const app = require('../app');
const db = require('../db/models');

// âœ… Create HTTP server from Express app (required for Socket.IO)
const server = http.createServer(app);

// âœ… Socket.IO attached to the HTTP server
const io = new Server(server, {
  cors: {
    origin: isProduction
      ? ["https://franks-world.onrender.com"]
      : ["http://localhost:5173"],
    credentials: true,
  },
});

// âœ… Socket events
io.on("connection", (socket) => {
  console.log("âœ… socket connected:", socket.id);

  socket.on("chatMessage", (payload) => {
      // broadcast to all clients
      io.emit("chatMessage", payload);
    });

    socket.on("joinRoom", ({ roomId }) => {
    socket.join(`room:${roomId}`);
    console.log(`ğŸ”µ ${socket.id} joined room:${roomId}`);
  });

  socket.on("leaveRoom", ({ roomId }) => {
    socket.leave(`room:${roomId}`);
    console.log(`ğŸŸ¡ ${socket.id} left room:${roomId}`);
  });

  // payload should include roomId and message data
  socket.on("roomMessage", (payload, cb) => {
  const roomId = payload?.roomId;

  console.log("ğŸ“© SERVER roomMessage:", roomId, payload?.message?.id);

  if (!roomId) return;

  // optional ACK back to sender
  if (typeof cb === "function") {
    cb({ ok: true, roomId });
  }

  // ğŸ”¥ broadcast to everyone else in that room
  socket.to(`room:${roomId}`).emit("roomMessage", payload);
});



  socket.on("disconnect", () => {
    console.log("âŒ socket disconnected:", socket.id);
  });
});

// Check DB connection before starting server
db.sequelize
  .authenticate()
  .then(() => {
    // âœ… Start listening with the HTTP server (NOT app.listen)
    server.listen(port, () => {
      console.log(`âœ…Server Listening on port ${port}...`);
    });
  })
  .catch((err) => {
    console.error("âŒ Database connection failure.");
    console.error(err);
  });
